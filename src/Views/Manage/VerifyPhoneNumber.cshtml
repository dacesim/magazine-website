@using System.Threading.Tasks
@using Cik.MazSite.WebApp.Models
@model VerifyPhoneNumberViewModel
@{
    ViewData["Title"] = "Verify Phone Number";
}

<div class="mdl-cell mdl-cell--12-col">
    <form asp-controller="Manage" asp-action="VerifyPhoneNumber" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
        <input asp-for="PhoneNumber" type="hidden"/>
        <div class="mdl-grid page-container">
            <div class="mdl-cell mdl-cell--12-col page-row">
                <h3>Add a phone number.</h3>
                <h4>@ViewData["Status"]</h4>
                <hr/>
                <div asp-validation-summary="ValidationSummary.All"></div>
            </div>
            <div class="mdl-cell mdl-cell--6-col page-row">
                <div class="mdl-grid page-container">
                    <div class="mdl-cell mdl-cell--12-col page-row">
                        <div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
                            <label asp-for="Code" class="mdl-textfield__label"></label>
                            <input asp-for="Code" class="mdl-textfield__input"/>
                            <span asp-validation-for="Code" class="mdl-textfield__error"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mdl-cell mdl-cell--12-col page-row">
                <button type="submit"
                        class="mdl-button mdl-js-button
                            mdl-button--raised mdl-button--colored
                            mdl-js-ripple-effect">
                    Submit
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}